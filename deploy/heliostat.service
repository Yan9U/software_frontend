[Unit]
Description=Heliostat Flask Backend
After=network.target

[Service]
User=root
WorkingDirectory=/var/www/heliostat/backend
Environment="PATH=/var/www/heliostat/backend/venv/bin"
ExecStart=/var/www/heliostat/backend/venv/bin/gunicorn -w 4 -b 127.0.0.1:5000 --timeout 300 backend:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
